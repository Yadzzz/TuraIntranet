@code {
    [Parameter]
    public string? Id { get; set; }

    private List<Data.Backoffice.Koss.KossHeadphoneModel> models;
    private Data.Backoffice.Koss.KossRma kossRma;
    private List<string> countries;

    protected override async Task OnInitializedAsync()
    {
        this.PageNavService.UpdateActiveSection("Backoffice");
        this.PageNavService.UpdateActivePage("KossRMA");

        this.models = await this.KossService.GetKossModelsAsync();

        if (string.IsNullOrEmpty(this.Id))
        {
            this.NavManager.NavigateTo("/kossrma", false);
            return;
        }

        this.countries = new()
        {
            {"sv" },
            {"dk" },
            {"no" },
            {"fi" }
        };

        if (int.TryParse(this.Id, out int id))
        {
            this.kossRma = await this.KossService.GetKossRmaAsync(id);
        }
    }

    public async Task Save()
    {
        bool success = await this.KossService.UpdateKossModelAsync(this.kossRma);

        if (success)
        {
            await this.NotificationService.AlertSuccess("RMA Uppdaterad.");
        }
        else
        {
            await this.NotificationService.AlertError("Kunde inte uppdatera RMA.");
        }
    }

    private void OnChangeCountry(ChangeEventArgs e)
    {
        string country = e.Value.ToString();
        this.kossRma.Country = country;
    }

    private string GetModelName()
    {
        if (this.models == null)
            return this.kossRma.KossModelId.ToString();

        var model = this.models.Where(x => x.Id == this.kossRma.KossModelId).FirstOrDefault();

        if (model == null || model.Name == null)
            return this.kossRma.KossModelId.ToString();

        return model.Name;
    }
}
