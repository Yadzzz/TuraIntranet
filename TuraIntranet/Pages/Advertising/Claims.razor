    private void OnClickShowCompleted()
    {
        if (this.showCompleted)
        {
            this.showCompleted = false;
        }
        else
        {
            this.showCompleted = true;
        }

        this.StateHasChanged();
    }

    private void Show(string claimId)
    {
        this.NavManager.NavigateTo("/claim/" + claimId);
    }
