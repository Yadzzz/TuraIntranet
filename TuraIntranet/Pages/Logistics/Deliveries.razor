                                        <td style="color:black"><div style="max-width:100%; white-space:pre-line;">@this.ShipmentService.GetShipmentEmployee(shipment.Shipment.ReceivedBy.Value)</div></td>
                                        <td style="color:black"><div style="max-width:100%; white-space:pre-line;">@shipment.Shipment.Supplier</div></td>
                                        @*<td style="color:black"><div style="max-width:50px; white-space:pre-line;">@shipment.Shipment.OrderNumbers</div></td>*@
                                        <td>
                                            <div style="max-width:150px; white-space:pre-line; overflow:hidden">
