        if (this.updatedBy == 0)
        {
            await this.NotificationService.AlertError("Välj Användare");
            return;
        }

        if (this.shipment.ShipmentDeviation.ShipmentId == 0)
        {
            this.shipment.ShipmentDeviation.ShipmentId = this.shipment.Shipment.Id;

            var shipmentUpdate = new TuraIntranet.Data.Logistics.Shipments.ShipmentUpdateData()
                {
                    ShipmentId = this.shipment.Shipment.Id,
                    UpdatedBy = this.updatedBy,
                    UpdatedAt = DateTime.Now,
                    StatusId = this.shipment.ShipmentUpdate.StatusId,
                    Note = "Avvikelse Inrapporterad"
                };

            this.ShipmentService.AddUpdate(shipmentUpdate);
            await this.ShipmentService.AddDeviation(this.shipment.ShipmentDeviation);
            this.ShipmentService.FlushShipments();
            await this.NotificationService.AlertSuccess("Avvikelse Tillagd");
        }
        else
        {
            var shipmentUpdate = new TuraIntranet.Data.Logistics.Shipments.ShipmentUpdateData()
                {
                    ShipmentId = this.shipment.Shipment.Id,
                    UpdatedBy = this.updatedBy,
                    UpdatedAt = DateTime.Now,
                    StatusId = this.shipment.ShipmentUpdate.StatusId,
                    Note = "Avvikelse Uppdaterad"
                };

            this.ShipmentService.AddUpdate(shipmentUpdate);
            await this.ShipmentService.UpdateDeviation(this.shipment.ShipmentDeviation);
            this.ShipmentService.FlushShipments();
            await this.NotificationService.AlertSuccess("Avvikelse Uppdaterad");
        }
    }

    private async Task Print()
    {
        if (this.shipmentDeviationPrintModel == null)
        {
            this.shipmentDeviationPrintModel = new()
                {
                    Supplier = this.shipment.Shipment.Supplier,
                    ShipmentCompany = string.Empty,
                    DeliveryDate = shipment.Shipment.ReceivedAt.ToShortDateString(),
                    OrderNumbers = shipment.Shipment.OrderNumbers,
                    ReceivedAt = shipment.Shipment.ReceivedAt.ToShortDateString(),
                    ResponsibleConsigneeEmployee = (shipment.Shipment.ReceivedBy != null ? this.ShipmentService.GetShipmentEmployee(shipment.Shipment.ReceivedBy.Value) : ""),
                    ResponsibleSorageEmloyee = (shipment.Shipment.ReceivedBy != null ? this.ShipmentService.GetShipmentEmployee(shipment.Shipment.ReceivedBy.Value) : ""),
                    SignedByShipmentLabel = false,
                    SignedVisDosa = false,
                    PartDelivery = shipment.ShipmentDeviation.PartDelivery,
                };
        }
        else
        {
            try
            {
                string template = this.DeviationService.GetHtmlTemplate(this.shipmentDeviationPrintModel.Supplier, this.shipmentDeviationPrintModel.ShipmentCompany,
                                                                        this.shipmentDeviationPrintModel.DeliveryDate, this.shipmentDeviationPrintModel.ResponsibleConsigneeEmployee.ToString(),
                                                                        this.shipmentDeviationPrintModel.OrderNumbers, this.shipmentDeviationPrintModel.PartDelivery,
                                                                        this.shipmentDeviationPrintModel.ReceivedAt, this.shipmentDeviationPrintModel.ResponsibleSorageEmloyee.ToString(),
                                                                        string.IsNullOrEmpty(this.shipmentDeviationPrintModel.PartDelivery) ? "___" : this.shipmentDeviationPrintModel.PartDelivery,
                                                                        this.shipmentDeviationPrintModel.SignedByShipmentLabel, this.shipmentDeviationPrintModel.SignedVisDosa,
                                                                        this.shipment.ShipmentDeviation.DamagedGoods ?? false, this.shipment.ShipmentDeviation.AcceptablePallets ?? false,
                                                                        this.shipment.ShipmentDeviation.CorrectPalletHeight ?? false, this.shipment.ShipmentDeviation.HasDeliveryNote ?? false,
                                                                        this.shipment.ShipmentDeviation.OrderNumberOnDeliveryNote ?? false,
                                                                        this.shipment.ShipmentDeviation.ConcealedFreigtDamage ?? false, this.shipment.ShipmentDeviation.DeliveryNoteDeviations ?? false,
                                                                        this.shipment.ShipmentDeviation.SortedBoxwise ?? false, this.shipment.ShipmentDeviation.OrderTransferred ?? false,
                                                                        this.shipment.ShipmentDeviation.TaggedMixedBoxes ?? false);

                var bytes = System.Text.Encoding.UTF8.GetBytes(template);
                await this.JS.InvokeAsync<object>("saveBytesBase64AsFile", (this.shipment.Shipment.Id + "-avvikelse.html"), Convert.ToBase64String(bytes));
                await this.NotificationService.AlertSuccess("Avvikelse Rapport skapad");
            }
            catch (Exception e)
            {
                Console.WriteLine(e.ToString());
                await this.NotificationService.AlertError("Kunde inte skriva ut Avvikelse Rapport");
            }
        }

        this.StateHasChanged();
    }
